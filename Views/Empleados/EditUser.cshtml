 @model Suri.DTO.EditUserDTO

 
 <h1 class="encabezado pt-lg-5">EDITAR USUARIO</h1>


 <form asp-action="EditUser" method="post">

      <div class="container">
         <div class="form-group row">

             <label asp-for="Id" class="col-sm-2 col-form-label"> </label>
             <div class="col-sm-10">
                 <input asp-for="Id" class="form-control" readonly="readonly" />
             </div>

         </div>
         <div class="form-group row">
             <label asp-for="UserName" class="col-sm-2 col-form-label"> </label>
             <div class="col-sm-10">
                 <input asp-for="UserName" class="form-control" />
                 <span asp-validation-for="UserName" class="text-danger"></span>
             </div>

         </div>
         <div asp-validation-summary="All" class="text-danger"></div>

         <div class="form-group row">

             <div class="col-sm-10">
                 <button type="submit" class="btn btn-primary">Actualizar</button>
                 <a asp-action="ListUsers" class="btn btn-danger">Cancelar</a>
             </div>
         </div>

         <div class="card">
             <div class="card-header">
                 <h3>Roles del Usuario</h3>
             </div>
             <div class="card-body">
                 @if (Model.Roles.Any())
                 {
                     foreach (var role in Model.Roles)
                     {
                         <h5 class="card-title">@role</h5>
                     }
                 }
                 else
                 {
                     <h5 class="card-title">No hay ningun role</h5>
                 }
             </div>
             <div class="card-footer">
                 <a href="#" style="width:auto" class="btn btn-primary">
                     Administrar Roles
                 </a>
             </div>
         </div>

         <div class="card mt-3">
             <div class="card-header">
                 <h3>Derechos de Usuario</h3>
             </div>
             <div class="card-body">
                 @if (Model.Claims.Any())
                 {
                     foreach (var claim in Model.Claims)
                     {
                         <h5 class="card-title">@claim</h5>
                     }
                 }
                 else
                 {
                     <h5 class="card-title">No hay ningun derecho</h5>
                 }
             </div>
             <div class="card-footer">
                 <a href="#" style="width:auto" class="btn btn-primary">
                     Administrar Derechos
                 </a>
             </div>
         </div>
         </div>

 </form>