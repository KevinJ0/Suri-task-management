@model IEnumerable<Suri.Models.MyUsers>

@{
    ViewData["Title"] = "All Users";
}

<h1>Lista de Usuarios</h1>

@if (Model.Any())
{
    <a asp-controller="Account" asp-action="Register" class="btn btn-primary mb-3" style="width:auto;">Crear Nuevo Usuario</a>

    foreach (var user in Model)
    {

        <div class="card mb-3">
            <div class="card-header">

                Usuario Id: @user.Id
            </div>

            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>

            <div class="card-footer">
                <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">
                    <a asp-controller="Empleados" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary" style="width:auto;">Editar</a>
                    <button onclick="return confirm('Está seguro que quiere borrar este usuario: @user.UserName')" type="submit" class="btn btn-danger">Borrar</button>
                </form>
            </div>
        </div>
    }
}
else
{

    <div class="card">
        <div class="card-header">No hay empleados creados</div>

        <div class="card-body">
            <h5 class="card-title">
                Usa el boton de abajo para crear un nuevo empleado
            </h5>
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary" style="width:auto;">Crear nuevo rol</a>
        </div>
    </div>

}



