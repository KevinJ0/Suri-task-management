@model Suri.Models.Actividades

@{
    ViewData["Title"] = "Edit";
}

<h1 class="encabezado pt-lg-5">EDITAR ACTIVIDAD</h1>


<div class="container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Actividad" class="control-label"></label>
            <input asp-for="Actividad" class="form-control" />
            <span asp-validation-for="Actividad" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FechaAsignacion" class="control-label"></label>
            <input asp-for="FechaAsignacion" class="form-control" />
            <span asp-validation-for="FechaAsignacion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nota" class="control-label">Nota</label>
            <textarea rows="4" cols="50" class="form-control" asp-for="Nota"></textarea>
            <span asp-validation-for="Nota" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Asistente" class="control-label"></label>
            <input asp-for="Asistente" class="form-control" />
            <span asp-validation-for="Asistente" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FechaRealizacion" class="control-label"></label>
            <input asp-for="FechaRealizacion" class="form-control" />
            <span asp-validation-for="FechaRealizacion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="accion" class="control-label"></label>
            <input asp-for="accion" class="form-control" />
            <span asp-validation-for="accion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MyUserId" class="control-label"></label>
            <select asp-for="MyUserId" class="form-control" asp-items="ViewBag.MyUserId"></select>
            <span asp-validation-for="MyUserId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LocalidadId" class="control-label"></label>
            <select asp-for="LocalidadId" class="form-control" asp-items="ViewBag.LocalidadId"></select>
            <span asp-validation-for="LocalidadId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PrioridadId" class="control-label"></label>
            <select asp-for="PrioridadId" class="form-control" asp-items="ViewBag.PrioridadId">
            </select>
            <span asp-validation-for="PrioridadId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="custom-control custom-switch">
                <input asp-for="Estado" type="checkbox" class="custom-control-input">
                <label asp-for="Estado" class="custom-control-label">Completado</label>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
            <input type="submit" value="Actualizar" class="btn btn-primary" />
        </div>
    </form>

    <div class="text-right" >
        <a href='@ViewBag.returnUrl'>Volver a la lista</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
